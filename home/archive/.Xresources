!! Appearance
URxvt.depth:            32
URxvt.background:       [95]#1d2021

URxvt.font:	            xft:Hack-Regular:size=11
URxvt.boldFont:         xft:Hack-Bold:size=11
URxvt.italicFont:       xft:Hack-Italic:size=11
URxvt.boldItalicFont:   xft:Hack-BoldItalic:size=11

URxvt*scrollBar:        false
URxvt*scrollBar_right:  false
URxvt.cursorColor:      magenta
URxvt.internalBorder:   0
URxvt.externalBorder:   0

!! Extensions
URxvt.perl-ext-common: clipboard,resize-font,

!! Clipboard
URxvt.clipboard.autocopy: true
URxvt.keysym.C-c: perl:clipboard:copy
URxvt.keysym.C-v: perl:clipboard:paste

!! resize-font
URxvt.resize-font.smaller:  C-j
URxvt.resize-font.bigger:   C-k

